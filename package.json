{
  "name": "@pixdif/pixdif",
  "version": "0.8.0",
  "description": "A Library to compare and show visual differences",
  "main": "dist",
  "scripts": {
    "build": "tsc",
    "debug": "tsc --sourceMap --incremental",
    "test": "npm run lint && npm run jest",
    "lint": "eslint --ext=js,ts --max-warnings=0 .",
    "jest": "jest --no-cache --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pixdif/pixdif.git"
  },
  "keywords": [
    "pixel",
    "difference",
    "compare",
    "image"
  ],
  "author": "Kazuichi Takashiro",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pixdif/pixdif/issues"
  },
  "homepage": "https://github.com/pixdif/pixdif#readme",
  "dependencies": {
    "@pixdif/core": "file:src/core",
    "@pixdif/model": "file:src/model",
    "@pixdif/parser": "file:src/parser",
    "@pixdif/png-parser": "file:src/png-parser"
  },
  "devDependencies": {
    "@pixdif-tests/core": "file:test/core",
    "@pixdif-tests/parser": "file:test/parser",
    "@pixdif/html-reporter": "^0.3.2",
    "@types/node": "^20.12.12",
    "@types/pixelmatch": "^5.2.4",
    "@types/pngjs": "^6.0.1",
    "@typescript-eslint/eslint-plugin": "^7.9.0",
    "@typescript-eslint/parser": "^7.9.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "glob": "^10.3.15",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.5"
  },
  "workspaces": [
    "src/*",
    "test/*"
  ]
}
